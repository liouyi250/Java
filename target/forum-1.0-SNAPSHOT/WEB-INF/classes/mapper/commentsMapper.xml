<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.dao.CommentsDao">
    <resultMap id="commentsMap" type="com.smart.entity.Comments">
        <id property="id" column="id"/>
        <result property="postsId" column="postsId"/>
        <result property="valuatorId" column="valuatorId"/>
        <result property="evaluateeId" column="evaluateeId"/>
        <result property="commentTime" column="commentTime"/>
        <result property="commentDetail" column="commentDetail"/>
        <association property="user" column="valuatorId" select="com.smart.dao.UserDao.queryUserById"/>
    </resultMap>

    <select id="queryComment" resultMap="commentsMap" >
        SELECT id,postsId,valuatorId,evaluateeId,commentTime,commentDetail from comments WHERE postsId=#{postsId}
    </select>

    <insert id="addComment" parameterType="com.smart.entity.Comments" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO comments(postsId,valuatorId,evaluateeId,commentTime,commentDetail) values(#{postsId},#{valuator},#{evaluatee},#{commentTime},#{commentDetail})

    </insert>

    <update id="updateComment" parameterType="com.smart.entity.Comments">
        UPDATE comments SET commentTime=#{commentTime},commentDetail=#{commentDetail} WHERE  id=#{id}
    </update>

    <delete id="deleteComment" parameterType="int">
        DELETE FROM comments where id=#{id}
    </delete>
</mapper>