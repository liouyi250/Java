<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.dao.UserDao">
    <resultMap id="userMap" type="com.smart.entity.User">
        <id property="id" column="id"/>
        <result property="userName" column="username"/>
        <result property="password" column="password"/>
        <result property="roleId" column="role_id"/>
        <result property="isLock" column="isLock"/>
    </resultMap>

    <select id="queryUser" resultMap="userMap" >
        SELECT id,username as userName,password,role_id as roleId,isLock from user WHERE username=#{userName} and password=md5(#{password})
    </select>

    <insert id="addUser" parameterType="com.smart.entity.User" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO user(username,password,role_id,isLock) values(#{userName},md5(#{password}),#{roleId},#{isLock})

    </insert>

    <update id="updateUser" parameterType="com.smart.entity.User">
        UPDATE user SET username=#{userName},password=md5(#{password}),role_id=#{roleId},isLock=#{isLock} WHERE id=#{id}
    </update>
</mapper>