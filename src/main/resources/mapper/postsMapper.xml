<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.dao.PostsDao">
    <resultMap id="postsMap" type="com.smart.entity.Posts">
        <id property="id" column="id"/>
        <result property="boardId" column="boardId"/>
        <result property="createrId" column="createrId"/>
        <result property="subject" column="subject"/>
        <result property="article" column="article"/>
        <result property="createTime" column="createTime"/>
        <result property="viewCount" column="viewCount" />
        <result property="top" column="top"/>
        <result property="elite" column="elite"/>
        <association property="user" column="createrId" select="com.smart.dao.UserDao.queryUserById" />
    </resultMap>

    <select id="queryPostsById" resultMap="postsMap" parameterType="int">
        SELECT id,boardId,createrId,subject,article,createTime,viewCount,top,elite FROM posts WHERE id=#{postsId}
    </select>

    <insert id="addNewPosts" parameterType="com.smart.entity.Posts" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO posts(boardId,createrId,subject,article,createTime) VALUES (#{boardId},#{createrId},#{subject},#{article},#{createTime})
    </insert>

    <delete id="deletePosts" parameterType="int">
        DELETE FROM posts where id=#{id}
    </delete>

    <update id="updatePosts" parameterType="com.smart.entity.Posts">
        UPDATE posts SET boardId=#{boardId},subject=#{subject},article=#{article},createTime=#{createTime} where id=#{id}
    </update>



</mapper>